on_info = {!black_screen +agr_actor_inside_9 =actor_on_level(agroprom_underground)} sr_idle@line_0_1 %=play_sound(agru_leader_dolg_pda:dolg:agr_duty_base_commander_name) +agr_actor_inside_10 =give_inited_task(storyline:agru_leader_dolg_task:dolg) +agru_open_story_door =play_sound(snork_tunnel_distant)%

[sr_idle@line_0_1]
