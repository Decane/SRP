on_info = sr_idle@line_3 %=give_inited_task(storyline:agru_find_secret_task:csky)%

[sr_idle@line_3]
on_info = {+agru_find_secret_task_complete} sr_idle@line_3_1 %=play_sound(agru_radio:stalker:sim_strelok_name)%

[sr_idle@line_3_1]
on_signal = sound_end | sr_idle@line_4

[sr_idle@line_4]
