[logic]
active = ph_button@prelocked

[ph_button@prelocked]
anim = idle
on_info = {+mil_militarybase_dead_1 +mil_militarybase_dead_2 +mil_militarybase_dead_3} ph_button@locked
on_info2 = {+mil_alone_mission} ph_button@locked

[ph_button@locked]
anim = idle
on_press = ph_button@unlocked
tooltip = tips_radio_tower

[ph_button@unlocked]
anim = off
on_game_timer = 20 | sr_idle %+mil_actor_go_to_limansk =play_sound(mil_hires_in_bubble_thanks_1:killer)%

[sr_idle]
on_signal = sound_end | sr_idle@end %+mil_sound_thanks%

[sr_idle@end]
on_info = {=black_screen} ph_button@off

[ph_button@off]
anim = off
on_info = {!black_screen} sr_idle@end